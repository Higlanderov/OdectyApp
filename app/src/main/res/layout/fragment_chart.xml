<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.main.ChartFragment">

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/detailBarChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TOTO JE NOVÝ PRVEK PRO ZOBRAZENÍ, KDYŽ CHYBÍ DATA -->
    <TextView
        android:id="@+id/emptyChartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pro zobrazení grafu je potřeba alespoň jeden odečet."
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>