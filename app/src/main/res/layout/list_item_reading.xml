<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingVertical="12dp">

    <ImageView
        android:id="@+id/syncStatusIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_cloud_upload"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginEnd="8dp"
        app:tint="?attr/colorOnSurface"
        android:contentDescription="@string/status_waiting_for_sync"/>

    <TextView
        android:id="@+id/readingDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        tools:text="17. 10. 2025 20:20" />

    <ImageView
        android:id="@+id/adminEditIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_admin"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginEnd="4dp"
        app:tint="?attr/colorOnSurface"
        android:contentDescription="@string/edited_by_admin"/>

    <TextView
        android:id="@+id/readingValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        tools:text="12345.67" />

</LinearLayout>
